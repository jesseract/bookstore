<div class='log-out'>
<p><%= link_to "Your cart (#{@cart.line_items.count})", cart_path(@cart) %></p>
<p><%= link_to "Log out", destroy_user_session_path, :method => :delete %></p>
<p></div>
  <%= form_tag books_path, method: :get, class: 'form-inline' do %>
    <div class='form-group'>
      <%= text_field_tag :search, params[:search], class: 'form-control' %>
    </div>
    <%= submit_tag "Search", class: 'btn btn-default' %>
  <% end %>
</p>
<%= link_to "Sort by Most Popular", root_path(sort: "times_purchased") %></p>
<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published Date</th>
      <th>Price</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.author %></td>
      <td><%= book.published_date %></td>
      <td><%= book.price.format %></td>
      <td><%= link_to "Add to Cart", book_path(book) %></td>
    </tr>
    <% end %>
</table>

<%= paginate @books %>


