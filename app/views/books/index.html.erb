<p>
  <%= form_tag root_path, method: :get, class: 'form-inline' do %>
    <div class='form-group'>
      <%= text_field_tag :search, nil, class: 'form-control' %>
    </div>
    <%= submit_tag "Search", class: 'btn btn-default' %>
  <% end %>
</p>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published Date</th>
      <th>Price</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.published_date %></td>
      <td><%= book.price.format %></td>
    </tr>
    <% end %>
</table>
