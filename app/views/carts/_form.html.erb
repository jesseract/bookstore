<% if @cart.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@cart.errors.count, "error") %> prohibited this cart from being saved:</h2>
    <ul>
    <% @cart.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@cart) do |f| %>
  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    <% @cart.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.book.title %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.book.price %></td>
        <td><%= link_to 'Delete Item', line_item_path(line_item), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
