<!DOCTYPE html>
<head>
  <title>Bookstore</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
  <%= csrf_meta_tags %>  
  <%= tag :meta, :name => "stripe-key", :content => :publishable_key %>
</head>
<body>
  <div class='container'>
    <header>
      <a href="/books"><h1>Speak Friend and Enter Bookstore</h1></a>
    </header>

    <div class='flash'>
      <% flash.each do |message_type, messages| %>
        <div class='alert alert-<%= bootstrap_alert_message_class_for(message_type) %>'>
          <ul class='<%= message_type %>'>
            <% [messages].flatten.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <p class="alert"><%= alert %></p>

    <%= yield %>
  </div>
</body>
